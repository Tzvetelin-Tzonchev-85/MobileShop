@model AddProductsFormModel

@{
    ViewData["Title"] = "Добавяне на продукт";
}

@*<h2> Добавяне на продукт</h2>*@

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm 12">
<form method="post">
  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control"  placeholder="Nokia, Samsung, Huawei ...">
    <span asp-validation-for="Name"class="small text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Dimension"></label>
    <input asp-for="Dimension" class="form-control"  placeholder="146.7 71.5 7.4">
  </div>
  <div class="form-group">
    <label asp-for="OperationSystem"></label>
    <input asp-for="OperationSystem" class="form-control"  placeholder="Android, IOS,...">
    <span asp-validation-for="OperationSystem"class="small text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Colour"></label>
    <input asp-for="Colour" class="form-control"  placeholder="White, Black, Pink ...">
    <span asp-validation-for="Colour"class="small text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control"  placeholder="220.10, 350.60, 470.30 ...">
    <span asp-validation-for="Price"class="small text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="CategoryId"></label>
    <select asp-for="CategoryId" class="form-control" >
      @foreach (var category in Model.Categories)
      {
          <option value="@category.Id">@category.Name</option>
      }
    </select>
  </div>
   <div class="form-group">
    <label asp-for="ManifacturerId"></label>
    <select asp-for="ManifacturerId" class="form-control" >
      @foreach (var manifacturer in Model.Manifactures)
      {
          <option value="@manifacturer.Id">@manifacturer.Name, @manifacturer.Country</option>
      }
    </select>
  </div>
  <div class="form-group">
    <label asp-for="ModelId"></label>
    <select asp-for="ModelId" class="form-control" >
      @foreach (var models in Model.Models)
      {
          <option value="@models.Id">@models.TypeBatery, @models.Size</option>
      }
    </select>
  </div>

  <input class="btn btn-primary" type="submit" value="Save" />
</form>
</div>
</div>
</div>
